<Window x:Class="MadsKristensen.AddAnyFile.FileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadsKristensen.AddAnyFile"
        mc:Ignorable="d"        
        Title="Add New File" Height="180" Width="520" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        local:VsTheme.UseVsTheme="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0"
               x:Name="lblFolder" 
               HorizontalContentAlignment="Right"
               VerticalContentAlignment="Center"
               Width="auto"
               Height="34"
               FontSize="14" 
               FontWeight="Bold"  
               Content="Folder/File Name:" />
        <TextBox Grid.Column="1" Grid.Row="0"
                 x:Name="txtName"
                 Width="240"
                 Height="34"
                 FontSize="14"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" 
                 TextAlignment="Left" 
                 Padding="5,6,2,3" />
        <Button Grid.Column="2" Grid.Row="0" 
                x:Name="btnCreate"
                Width="75" 
                Height="34"
                Content="Add file"
                FontSize="13"
                FontWeight="Bold"
                Background="Transparent"
                BorderBrush="DarkGray"
                BorderThickness="1"
                Click="Button_Click"
                IsDefault="True"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
        <Label x:Name="lblTips" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
